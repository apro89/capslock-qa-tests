{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:playwright/playwright-test",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "playwright"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "playwright/expect-expect": "off"
  },
  "env": {
    "node": true,
    "es2020": true
  }
}

